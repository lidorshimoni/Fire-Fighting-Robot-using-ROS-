<?xml version="1.0"?>
<launch>

  <master auto="start"/>

<!-- global planner plugin -->
  <arg name="base_global_planner" default="navfn/NavfnROS"/>

<!-- local planner plugin -->
  <arg name="base_local_planner" default="teb_local_planner/TebLocalPlannerROS"/>
  <!-- <arg name="base_local_planner" default="dwa_local_planner/DWAPlannerROS"/> -->

  
<!--- Run Move Base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen" >

    <param name="base_global_planner" value="$(arg base_global_planner)"/>
    <param name="base_local_planner" value="$(arg base_local_planner)"/>  

<!-- load config files -->

  <!-- global config -->
    <rosparam file="$(find Fire_Fighting_Robot)/move_base/config/global_costmap_params_ABot.yaml" command="load" ns="global_costmap"/>

  <!-- local config -->
    <rosparam file="$(find Fire_Fighting_Robot)/move_base/config/local_costmap_params_ABot.yaml" command="load" ns="local_costmap"/>

  <!-- meutual configs  -->
    <rosparam file="$(find Fire_Fighting_Robot)/move_base/config/costmap_common_params_ABot.yaml" command="load" ns="global_costmap"/>
    <rosparam file="$(find Fire_Fighting_Robot)/move_base/config/costmap_common_params_ABot.yaml" command="load" ns="local_costmap"/>
    <!-- <rosparam file="$(find Fire_Fighting_Robot)/move_base/config/teb_local_planner_params_RQT.yaml" command="load" ns="local_costmap"/> -->
    <!-- <rosparam file="$(find Fire_Fighting_Robot)/move_base/config/move_base_params_ABot.yaml" command="load" /> -->

    <param name="local_costmap/width" value="4"/>
    <param name="local_costmap/height" value="4"/> 
    <param name="controller_frequency" value="2" />
    
    <!-- <remap from="/ABot/ABot/scan" to="/ABot/scan"/> --> -->
    <!-- <remap from="cmd_vel" to="ABot/cmd_vel" /> -->
    <!-- <remap from="move_base_simple/goal" to="ABot/move_base_simple/goal" />  -->

  </node>

</launch>
